<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="50dp">

        <Button
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/back_icon"
            android:layout_marginLeft="50dp">
        </Button>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu Pesanan"
            android:fontFamily="@font/robotocondensed_bold"
            android:textColor="@color/black"
            android:textSize="35dp"
            android:paddingHorizontal="100dp"
            android:layout_marginTop="10dp">
        </TextView>
        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/update_button"
            android:layout_marginRight="10dp">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="150dp">
            <EditText
                android:id="@+id/nama_pemesan"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="16dp"
                android:hint="@string/Pemesan"
                android:background="@drawable/box_edit"
                android:textSize="20dp"
                android:inputType="textPersonName"/>
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="50dp"
            android:layout_marginTop="30dp">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:outlineSpotShadowColor="@color/black">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/soto"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Soto Semarang"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:layout_marginTop="95dp"
                    android:fontFamily="@font/robotocondensed_regular"
                    android:textColor="@color/black"/>
                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/min_button"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="130dp"/>
                <EditText
                    android:id="@+id/nama_produk"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="60dp"
                    android:paddingTop="1dp"
                    android:hint="@string/jumlah"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:layout_gravity="center"/>
                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/plus_button"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="130dp"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:outlineSpotShadowColor="@color/black"
                android:layout_marginHorizontal="25dp">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/esteh"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Es Teh"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:layout_marginTop="95dp"
                    android:fontFamily="@font/robotocondensed_regular"
                    android:textColor="@color/black"/>
                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/min_button"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="130dp"/>
                <EditText
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="60dp"
                    android:paddingTop="1dp"
                    android:hint="@string/jumlah"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:layout_gravity="center"/>
                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/plus_button"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="130dp"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:outlineSpotShadowColor="@color/black">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/esjeruk"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Es Jeruk"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:layout_marginTop="95dp"
                    android:fontFamily="@font/robotocondensed_regular"
                    android:textColor="@color/black"/>
                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/min_button"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="130dp"/>
                <EditText
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="60dp"
                    android:paddingTop="1dp"
                    android:hint="@string/jumlah"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:layout_gravity="center"/>
                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/plus_button"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="130dp"/>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
        <Button
            android:id="@+id/Btn_Pesan"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="350dp"
            android:layout_marginRight="160dp"
            android:fontFamily="@font/robotocondensed_bold"
            android:background="@drawable/rounded_button"
            android:text="Pesan"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textAllCaps="false"
            android:textStyle="bold"/>
    </LinearLayout>

</RelativeLayout>